<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HairStyleRecyclerViewActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/ln_hairstylelist">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical">
            <com.google.android.material.search.SearchBar
                android:id="@+id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/ln_hairstylelist"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        style="@style/Widget.Material3.Button.TextButton"
                        android:id="@+id/txtBtn_foryou"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="For you"
                        />

                    <Button
                        style="@style/Widget.Material3.Button.TextButton"
                        android:id="@+id/txtBtn_newhair"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Hairstyle"
                        />

                    <Button
                        android:id="@+id/txtBtn_Anime"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anime"
                        />
                    <Button
                        android:id="@+id/txtBtn_forman"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="For Man"
                        />

                    <Button
                        android:id="@+id/txtBtn_forgirl"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="For Girl" />

                    <Button
                        android:id="@+id/txtBtn_celeb"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hairstyle of Celebrities"
                        />

                </LinearLayout>

            </HorizontalScrollView>


        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="2"
            android:columnCount="2">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rv_hairstyle">

            </androidx.recyclerview.widget.RecyclerView>

        </GridLayout>

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>